
@using PrompCorpFacilityManagementSystem.Models
<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/bundles/mainCss")
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous" />
    @Scripts.Render("~/bundles/mainJs")
</head>
<body class="hold-transition sidebar-mini">
   
    <div class="wrapper">

        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
               
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="/admin/" class="nav-link">Home</a>
                </li>
            </ul>
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" style="cursor:pointer;" onclick="Logout();" title="Sign off">
                        <i class="fa fa-power-off"></i>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-widget="control-sidebar" data-slide="true" href="#" role="button">
                        <i class="fas fa-th-large"></i>
                    </a>
                </li>
            </ul>
        </nav>
        <aside class="main-sidebar sidebar-dark-primary elevation-4">



            <div class="sidebar">

                <div class="user-panel mt-3 pb-3 mb-3 d-flex">

                    <div class="info">

                        <a href="javascript:void(0)" class="d-block">Welcome @ReadCookie.GetCookieValue("Username")</a>

                    </div>
                </div>



                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                       
                       
                        <li class="nav-item">
                            <a href="/asset-management/" class="nav-link">
                                <i class="fa fa-file-invoice-dollar nav-icon"></i>
                                <p>Asset Management</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/supplier-management/" class="nav-link">
                                <i class="fa fa-file-signature nav-icon"></i>
                                <p>Supplier Management</p>
                            </a>
                        </li>
                       
                    </ul>
                </nav>

            </div>

        </aside>
        <div class="content-wrapper">
            @RenderBody()
            
            <aside class="control-sidebar control-sidebar-dark"></aside>

        </div>
    </div>
</body>

</html>
<script>
    function Logout() {
        $.ajax({
            type: "POST",

            url: '@Url.Action("Logout", "Login")',
            success: function (data) {
                window.location.href = "/";
            },
            error: function (result) {
                alert("some error occured");
                $("#loading").hide();
            }
        });

    }
</script>